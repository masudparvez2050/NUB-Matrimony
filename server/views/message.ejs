          <h1 class="my-4 py-2 mb-10 text-xl font-semibold"><%= message %></h1>
          <% } %>
          <a
            class="bg-[#ff0081] text-white rounded-full py-2 px-6 text-lg"
            href="http://localhost:5173/login"
